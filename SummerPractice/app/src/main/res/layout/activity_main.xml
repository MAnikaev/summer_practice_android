<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="86dp"
        android:background="@drawable/result_container"
        android:gravity="center"
        android:text="Хэш вашей личности"
        android:textAlignment="center"
        android:textColor="@color/additional"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/result_container"
        android:hint="@string/input_your_name"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textColor="@color/additional"
        android:textColorHint="@color/additional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultView" />

    <EditText
        android:id="@+id/tallField"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/result_container"
        android:hint="@string/input_your_height"
        android:inputType="number"
        android:paddingStart="10dp"
        android:textColor="@color/additional"
        android:textColorHint="@color/additional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameField" />

    <EditText
        android:id="@+id/weightField"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/result_container"
        android:hint="@string/input_your_weight"
        android:inputType="numberDecimal"
        android:paddingStart="10dp"
        android:textColor="@color/additional"
        android:textColorHint="@color/additional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tallField" />

    <EditText
        android:id="@+id/ageField"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/result_container"
        android:hint="@string/input_your_age"
        android:inputType="number"
        android:paddingStart="10dp"
        android:textColor="@color/additional"
        android:textColorHint="@color/additional"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weightField" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:textColor="@color/additional"
        android:textAlignment="center"
        android:background="@drawable/result_container"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        android:text="@string/calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>